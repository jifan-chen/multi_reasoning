{
  "dataset_reader": {
      "type": "multiprocess",
      "base_reader" : {
          "type": "wikihop_reader",
          "lazy": true,
          "para_limit": 3200,
          "filter_compare_q": false,
          "token_indexers": {
            "tokens": {
              "type": "single_id",
              "lowercase_tokens": false
            },
            "token_characters": {
              "type": "characters",
              "character_tokenizer": {
                "byte_encoding": "utf-8"
              },
              "min_padding_length": 5
            }
          }
      },
      "num_workers": 2,
      "output_queue_size": 500
  },

  "datasets_for_vocab_creation": [],

  "vocabulary": {
    "directory_path": "/scratch/cluster/jfchen/jason/multihopQA/wikihop/vocabulary/",
    "extend": false
    },

  "validation_dataset_reader": {
      "type": "multiprocess",
      "base_reader" : {
        "type": "wikihop_reader",
        "lazy": false,
        "para_limit": 3200,
        "filter_compare_q": false,
        "token_indexers": {
          "tokens": {
            "type": "single_id",
            "lowercase_tokens": false
          },
          "token_characters": {
            "type": "characters",
            "character_tokenizer": {
              "byte_encoding": "utf-8"
            },
            "min_padding_length": 5
          }
        }
      },
      "num_workers": 2,
      "output_queue_size": 500
  },

  "train_data_path": "/scratch/cluster/jfchen/jason/multihopQA/wikihop/train_chain_2fold/fold0/train*.json",
  "validation_data_path": "/scratch/cluster/jfchen/jason/multihopQA/wikihop/dev/dev_chain.json",

  "model": {
    "type": "hotpot_legacy_ptn_chain",

    "strict_eos": false,

    "account_trans": false,

    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "/scratch/cluster/jfchen/jfchen/data/word_emb/glove.840B.300d.txt",
          "embedding_dim": 300,
          "trainable": false
        },
        "token_characters": {
                "type": "character_encoding",
                "embedding": {
                "num_embeddings": 262,
                "embedding_dim": 8
                },
                "encoder": {
                "type": "cnn",
                "embedding_dim": 8,
                "num_filters": 100,
                "ngram_filter_sizes": [5]
                },
                "dropout": 0.0
            }
      }
    },

    "span_gate": {
      "type": "span_gate",
      "span_dim": 200,
      "max_decoding_steps": 5,
      "predict_eos": true,
      "cell": "lstm",
      "train_helper": "teacher_forcing",
      "val_helper": "beamsearch",
      "beam_size": 5,
      "pass_label": false
    },

    "gate_sent_encoder": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 200,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.0
    },

    "gate_self_attention_layer":{
      "type": "multi_head_self_attention_with_sup",
      "num_heads": 2,
      "input_dim": 200,
      "attention_dim": 200,
      "values_dim": 200,
      "attention_dropout_prob": 0.2
    },

    "phrase_layer_sp": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 400,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.0
    },

    "modeling_layer_sp": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 200,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.0
    },

    "dropout": 0.2
  },

  "iterator": {
    "type": "multiprocess",
    "base_iterator": {
      "type": "bucket",
      "sorting_keys": [
        [
          "passage",
          "num_tokens"
        ]
      ],
      "max_instances_in_memory": 500,
      "batch_size": 8,
      "maximum_samples_per_batch": ["passage", 15000]
    },
    "num_workers": 4,
    "output_queue_size": 50
  },

  "validation_iterator": {
    "type": "multiprocess",
    "base_iterator": {
      "type": "bucket",
      "sorting_keys": [
        [
          "passage",
          "num_tokens"
        ]
      ],
      "batch_size": 8
    },
    "num_workers": 4,
    "output_queue_size": 50
  },

  "trainer": {
    "num_serialized_models_to_keep": 1,
    "num_epochs": 20,
    "patience": 10,
    "validation_metric": "+evd_f1",
    "cuda_device": 0,
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 1
    },

    "optimizer": {
      "type": "adam",
      "lr": 0.0005
    }
  }

}
